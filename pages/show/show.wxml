<view class="general-session">
  <view>
    <image class="logo" src="/image/ASlogo1.jpg" style="height: 60px;width: 60px;">
    </image>   
  </view>

  <view class="welcome-card">
    <text class="welcome">Welcome, please:</text>
    <view class="btns">
      <navigator class="small-btn" url="/pages/signup/signup" hover-class="navigator-hover">Sign up
      </navigator>
      <navigator class="small-btn" url="/pages/login/login" hover-class="navigator-hover">Login
      </navigator>
    </view>
  </view>
</view>


      

<view class="card-product">

 <view class="image">
    <image src="{{image}}" class="project-img">
  </image>
  </view>
  <view>name: {{name}}</view>
  <view>description:{{description}}</view>
  <view>location {{location}}</view>

  <view>category: {{category}}</view>
  <view>rewards{{rewards}}</view>
  <view>Goal: {{amount_objective}}</view>
  <view>video: {{video}}</view>
</view>

<view>
  <form bindsubmit="bindSubmit">
 <textarea value="{{amount}}" style="input-size"placeholder="Place your donation" class="box" name="amount" maxlength="-1" auto-height />
    <button  style="margin-bottom:50px "type="primary" form-type="submit" loading="{{loading}}">Submit</button>
    </form>
  </view>

<view>Total raised : ${{total}} </view>





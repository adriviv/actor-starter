/** User Session TopBar **/

.general-session {
  display: flex;
  border-bottom: 1px solid rgba(0,0,0,0.2);
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
  position: sticky;
  top: 0;
} 

.logo {
  margin-left: 10px;
}

.welcome-card {
  position: absolute;
  right: 30px;
}

.welcome {
  font-size: 12px;
  padding: 0;
  margin: 0;
}

.btns {
  display: flex;
}

.small-btn {
  color: white;
  text-align: left;
  font-size: 12px;
  font-weight: bold; 
  background-color: #09BB07;
  padding: 4px;
  border-radius: 5px;
  margin-left: 4px;
}
